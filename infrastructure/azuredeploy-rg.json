{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Content Recommendation Engine - Resource Group deployment template for Deploy to Azure button"
  },
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name (dev, staging, or prod)"
      },
      "allowedValues": [
        "dev",
        "staging",
        "prod"
      ]
    },
    "resourcePrefix": {
      "type": "string",
      "defaultValue": "contentrec",
      "minLength": 2,
      "maxLength": 10,
      "metadata": {
        "description": "Prefix for resource names (2-10 characters, lowercase letters and numbers only)"
      }
    },
    "deploymentTimestamp": {
      "type": "string",
      "defaultValue": "[utcNow()]",
      "metadata": {
        "description": "Timestamp for deployment naming (auto-generated)"
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat(parameters('resourcePrefix'), parameters('environment'), uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot"
      },
      "tags": {
        "Environment": "[parameters('environment')]",
        "Project": "Content Recommendation Engine"
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "value": "[resourceGroup().location]"
    },
    "deploymentInstructions": {
      "type": "string",
      "value": "Storage account created successfully! This is a simplified deployment. To deploy the full infrastructure, use the Bicep templates directly with Azure CLI: az deployment sub create --location [location] --template-file infrastructure/main.bicep"
    }
  }
}