{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Content Recommendation Engine - Complete Azure infrastructure deployment"
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "eastus2",
      "metadata": {
        "description": "Azure region for all resources"
      },
      "allowedValues": [
        "eastus",
        "eastus2",
        "westus2",
        "westus3",
        "centralus",
        "northeurope",
        "westeurope",
        "uksouth",
        "southeastasia",
        "japaneast",
        "australiaeast"
      ]
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name (dev, staging, or prod)"
      },
      "allowedValues": [
        "dev",
        "staging",
        "prod"
      ]
    },
    "resourcePrefix": {
      "type": "string",
      "defaultValue": "contentrec",
      "minLength": 2,
      "maxLength": 10,
      "metadata": {
        "description": "Prefix for resource names (2-10 characters, lowercase letters and numbers only)"
      }
    },
    "principalId": {
      "type": "string",
      "metadata": {
        "description": "Your Azure AD Object ID (find in Azure Portal > Azure Active Directory > Users)"
      }
    },
    "principalType": {
      "type": "string",
      "defaultValue": "User",
      "metadata": {
        "description": "Type of principal (User for individual, ServicePrincipal for automation)"
      },
      "allowedValues": [
        "User",
        "ServicePrincipal"
      ]
    },
    "deploymentTimestamp": {
      "type": "string",
      "defaultValue": "[utcNow()]",
      "metadata": {
        "description": "Timestamp for deployment naming (auto-generated)"
      }
    }
  },
  "variables": {
    "deploymentName": "[concat('contentRec-', parameters('environment'), '-', parameters('deploymentTimestamp'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('resourcePrefix'), '-', parameters('environment'), '-rg')]",
      "location": "[parameters('location')]",
      "properties": {},
      "tags": {
        "Environment": "[parameters('environment')]",
        "Project": "Content Recommendation Engine"
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[concat(parameters('resourcePrefix'), '-', parameters('environment'), '-rg')]"
    },
    "location": {
      "type": "string",
      "value": "[parameters('location')]"
    },
    "deploymentInstructions": {
      "type": "string",
      "value": "Resource group created successfully! This is a simplified deployment. To deploy the full infrastructure, use the Bicep templates directly with Azure CLI: az deployment sub create --location [location] --template-file infrastructure/main.bicep"
    }
  }
}
