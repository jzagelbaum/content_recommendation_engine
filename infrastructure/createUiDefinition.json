{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "siteName",
        "type": "Microsoft.Common.TextBox",
        "label": "Application Name",
        "toolTip": "Name of the recommendation application",
        "placeholder": "Enter application name",
        "constraints": {
          "required": true,
          "regex": "^[a-zA-Z0-9-]{3,24}$",
          "validationMessage": "Application name must be 3-24 characters long and contain only letters, numbers, and hyphens."
        }
      }
    ],
    "steps": [
      {
        "name": "appSettings",
        "label": "Application Settings",
        "elements": [
          {
            "name": "hostingPlanName",
            "type": "Microsoft.Common.TextBox",
            "label": "Hosting Plan Name",
            "toolTip": "Name of the App Service hosting plan",
            "placeholder": "Enter hosting plan name",
            "constraints": {
              "required": true,
              "regex": "^[a-zA-Z0-9-]{3,40}$",
              "validationMessage": "Hosting plan name must be 3-40 characters long and contain only letters, numbers, and hyphens."
            }
          },
          {
            "name": "sku",
            "type": "Microsoft.Common.DropDown",
            "label": "Pricing Tier",
            "toolTip": "Select the pricing tier for the App Service plan",
            "defaultValue": "Free (F1)",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Free (F1)",
                  "value": "F1"
                },
                {
                  "label": "Basic (B1)",
                  "value": "B1"
                },
                {
                  "label": "Basic (B2)",
                  "value": "B2"
                },
                {
                  "label": "Basic (B3)",
                  "value": "B3"
                },
                {
                  "label": "Standard (S1)",
                  "value": "S1"
                },
                {
                  "label": "Standard (S2)",
                  "value": "S2"
                },
                {
                  "label": "Standard (S3)",
                  "value": "S3"
                }
              ]
            }
          },
          {
            "name": "openaiApiKey",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "OpenAI API Key"
            },
            "toolTip": "Enter your OpenAI API key",
            "constraints": {
              "required": true,
              "regex": "^sk-[a-zA-Z0-9]{20,}$",
              "validationMessage": "Please enter a valid OpenAI API key (starts with 'sk-')"
            },
            "options": {
              "hideConfirmation": true
            }
          },
          {
            "name": "openaiEndpoint",
            "type": "Microsoft.Common.TextBox",
            "label": "OpenAI Endpoint",
            "toolTip": "OpenAI API endpoint URL",
            "defaultValue": "https://api.openai.com/v1",
            "constraints": {
              "required": true,
              "regex": "^https://.*",
              "validationMessage": "Please enter a valid HTTPS URL"
            }
          }
        ]
      }
    ],
    "outputs": {
      "siteName": "[basics('siteName')]",
      "hostingPlanName": "[steps('appSettings').hostingPlanName]",
      "sku": "[steps('appSettings').sku]",
      "openaiApiKey": "[steps('appSettings').openaiApiKey]",
      "openaiEndpoint": "[steps('appSettings').openaiEndpoint]"
    }
  }
}